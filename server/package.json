{
		"name": "tiro-server",
		"version": "1.0.0",
		"description": "",
		"main": "index.js",
		"scripts": {
				"======== DEV ============":"=======================",
				"start": "run-s NPMdevserver",
				"BUNdevserver": "cross-env NODE_ENV=development bun --hot ./src/server.ts",
				"NPMdevserver": "cross-env NODE_ENV=development nodemon",
				"prodTs": "ts-node --transpileOnly ./src/server.ts",
				"prodJs": "tsc & node --experimental-worker build/server/src/tiro-server.js",
				"buildOLD": "tsc",
				"KILLALL": "kill -9 $(lsof -t -i:9229);kill -9 $(lsof -t -i:8082)",

				"======== TESTING ============":"=======================",
				"test": "jest --watchAll --config ./jest.config.js",
				"testing-prepare": "node -r ts-node/register ./scripts/prepareTestingEnv.script.ts",
				"testing-server-int": "cross-env TIRO_TESTING_ENV=true NODE_ENV=development nodemon",
				"testing-server": "run-s testing-prepare testing-server-int",

				"======== INSTALL ============":"=======================",
				"install-server": "npm install",
				"install-shared": "npm --prefix ../shared install",
				"install-all": "run-s install-server install-shared",
				"clean-build": "rm -r ./build &",
				"build": "export NODE_OPTIONS=--openssl-legacy-provider; webpack",
				"install-clean-build": "run-s install-all clean-build build"
		},
		"author": "",
		"license": "ISC",
		"dependencies": {
				"@types/lodash": "^4.14.161",
				"@types/node": "^14.11.2",
				"@types/socket.io": "^2.1.11",
				"bcrypt": "^5.0.1",
				"cors": "^2.8.5",
				"execa": "^5.0.0",
				"express": "^4.17.1",
				"express-basic-auth": "^1.2.0",
				"follow-redirects": "^1.15.1",
				"glob": "^7.1.6",
				"klaw": "^3.0.0",
				"koa": "^2.13.0",
				"koa-mount": "^4.0.0",
				"koa-static": "^5.0.0",
				"lodash": "^4.17.20",
				"npm-run-all": "^4.1.5",
				"socket.io": "^2.3.0",
				"socketio-file-upload": "^0.7.2",
				"through2": "^4.0.2",
				"verbal-expressions": "^1.0.2",
				"webpack-node-externals": "^2.5.2"
		},
		"devDependencies": {
				"@types/jest": "^29.5.1",
				"@types/klaw": "^3.0.1",
				"cross-env": "^7.0.3",
				"jest": "^29.5.0",
				"nodemon": "^2.0.12",
				"ts-jest": "^29.1.0",
				"ts-loader": "^8.0.15",
				"ts-node": "^10.9.1",
				"typescript": "^4.9.5",
				"webpack": "^5.21.1",
				"webpack-cli": "^4.5.0"
		}
}
