{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es6"],
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "skipLibCheck": true,
  
  "include": [
    "src/**/*",
    "../shared/**/*",
  ],
  "exclude": [
    "node_modules",
    "node_modules/@types/jest"
  ],
}