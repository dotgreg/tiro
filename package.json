{
    "name": "tiro",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "__DEV__": "",
        "dev": "cd sources-tiro & run-p client server",
        "client": "cd client & npm run start",
        "server": "cd server & npm run start",

        "__DESKTOP_BUILD__": "",
        "build-binaries": "cd ../builds-tiro/ & npm run build-binaries",

        "__MOBILE_BUILD__": "",
        "android-full-refresh": "run-s build-export build-to-cordova android-apk-refresh",
        "android-server-refresh": "run-s build-export-server build-to-cordova android-apk-refresh",
        "android-apk-refresh": "cd platforms/mobile & run-p emulator-detached test-apk",
        "build-to-cordova": "rm -r platforms/mobile/www/nodejs-project/tiro & npx mkdirp platforms/mobile/www/nodejs-project/tiro & cp -r ../builds-tiro/client platforms/mobile/www/nodejs-project/tiro/client & cp -r ../builds-tiro/server platforms/mobile/www/nodejs-project/tiro/server",

        "__NODE_BUILD__": "",
        "build-export": "run-s prepare-build build-client build-server clean-prev-build export-build build-binaries",
        "build-export-server": "run-s prepare-build build-server clean-server export-server",
        "build-export-client": "run-s prepare-build build-client clean-client export-client",
        "____1BUILD__": "",
        "prepare-build": "npx mkdirp ../builds-tiro & npx mkdirp ../builds-tiro/client & npx mkdirp ../builds-tiro/server",
        "build-client": "cd client & npm i &  rm -r ./build & npm run build",
        "build-server": "cd shared &  npm i & cd ../server & npm i & rm -r ./build & npm run build",
        "____2CLEAN_PREV_BUILD__": "",
        "clean-prev-build": "run-s clean-server clean-client clean-else",
        "clean-server": "rm -r ../builds-tiro/server",
        "clean-client": "rm -r ../builds-tiro/client",
        "clean-else": "rm -r ../builds-tiro/scripts & rm ../builds-tiro/package.json",
        "____3EXPORT__": "",
        "export-build": "run-s export-client export-config export-scripts export-server",
        "export-client": "cp -r client/build ../builds-tiro/client",
        "export-config": "cp package-root-build.json ../builds-tiro/package.json & cp tiro-config.sample.json ../builds-tiro/tiro-config.sample.json",
        "export-scripts": "cp -r scripts ../builds-tiro/scripts",
        "export-server": "cp -r server/build ../builds-tiro/server & cp -r server/ssl ../builds-tiro/server/ssl",
        
        "__OTHER__": "",
        "convertNotes": "cd scripts & yarle --configFile enex2md.json",
        "launchAppDev": "npm run startServerNewCmd & npm run client",
        "launchAppProd": "npm run startServerNewCmd",
        "startClientNewCmd": "start cmd /k \"cd ./client & npm run start\"",
        "startServerNewCmd": "start cmd /k \"cd ./server & npm run start\"",
        "linux": "ssh u0_a200@192.168.43.1 -p8022"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/dotgreg/mediadir.git"
    },

    
    
    "author": "",
    "license": "ISC",
    "homepage": "https://bitbucket.org/dotgreg/mediadir#readme",
    "dependencies": {
        "npm-run-all": "^4.1.5"
    }
}
